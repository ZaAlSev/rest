        <Button x:Name="login" Content="Войти" HorizontalAlignment="Left" Margin="90,284,0,0" VerticalAlignment="Top" Height="49" Width="186" Click="login_Click"/>
        <Button x:Name="reg" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="511,284,0,0" VerticalAlignment="Top" Height="49" Width="201" Click="reg_Click"/>
        <TextBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="126,0,0,0" materialDesign:HintAssist.Hint="Пароль" TextWrapping="Wrap" VerticalAlignment="Center" Width="321" Height="32"/>
